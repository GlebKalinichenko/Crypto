<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Crypto">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Encrypt AES"
    android:id="@+id/button"
        android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="204dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt AES"
        android:id="@+id/decryptButton"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrypt RSA"
        android:id="@+id/encryptRsaButton"
        android:layout_above="@+id/decryptButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt RSA"
        android:id="@+id/decryptRsaButton"
        android:layout_below="@+id/encryptRsaButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
